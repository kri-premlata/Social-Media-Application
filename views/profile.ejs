<%- include('partials/header')%> <%- include('partials/nav')%>

<div class="w-full">
  <div
    class="homepage bg-gradient-to-r from-sky-200 to-indigo-200 w-[80%] h-full mx-auto p-10 mt-5 rounded"
  >
    <h1 class="text-5xl mb-5 font-bold">Hello,<%= user.username %>ðŸ‘‹</h1>
    <img class="rounded" src="<%= user.avatar%>" alt="" /><br /><br />
    <a
      class="bg-sky-500 hover:bg-emerald-600 p-3 rounded font-semibold hover:text-white text-2xl"
      href="/user/logout"
      >Logout
    </a>
  </div>
  <hr class="mt-5 mx-auto w-[80%]" />

  <h1 class="text-5xl mx-[8%] font-bold">Posts</h1>
  
  <div class="w-[90%] mx-auto p-10 flex flex-col h-full">
   
    <% posts.forEach((post,index)=> { %>

    <div class="mx-auto bg-emerald-600 rounded p-5 w-full ">
      <h1 class="text-2xl font-bold"><%= post.title%></h1>
      <img class="h-[200px] mt-5" src="<%= post.media.thumbnailUrl%>" alt="" />
      <span><%= post.likes.length%></span>
      <a class="font-semibold text-xl" href="/post/like/<%= post._id%>">Like</a>
    </div>
    <% }) %>
    <!-- <div><%= JSON.stringify(posts)%></div> -->
  </div>
</div>
  <%- include('partials/footer')%>

